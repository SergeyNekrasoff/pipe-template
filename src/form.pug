block content
  .wrapper#wrapper
    .container#container
      include template/_header-clean
      
      section.subscribe
        .skin.skin-center
          .wrap-form-subscribe
            form.form-subscribe.js-form-subscribe(novalidate)
              //- .input-item
              //-   input(type="email" name="email" id="email" class="js-input-form" placeholder="Email" required)
